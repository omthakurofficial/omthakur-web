  const formatDuration = (duration: string) => {
    return duration
  }

  const formatViews = (views: number) => {
    if (views >= 1000000) {
      return Math.floor(views / 100000) / 10 + 'M'
    } else if (views >= 1000) {
      return Math.floor(views / 100) / 10 + 'K'
    }
    return views.toString()
  }

